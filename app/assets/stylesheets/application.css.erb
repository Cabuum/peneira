@font-face {
    font-family: 'GermanBeautyRegular';
    src: url('germanbeauty.eot');
    src: url('germanbeauty.eot') format('embedded-opentype'),
         url('germanbeauty.woff2') format('woff2'),
         url('germanbeauty.woff') format('woff'),
         url('germanbeauty.ttf') format('truetype'),
         url('germanbeauty.svg#GermanBeautyRegular') format('svg');
}

body {
  padding-bottom: 70px;
}

.white {
  color: #fff;
}

.right-text{
  float: right;
  text-align: right;
}

.brand-logo {
  font-family: 'GermanBeautyRegular', sans-serif;
  color: #FFF;
  font-size: 29px;
  margin-right: 1.3em;
  margin-bottom: 0.9em;
}

.brand-logo:hover {
  text-decoration: none;
  color: #FFF;
}

.home-title {
	margin-top: 5%;
	margin-bottom: 0.5em;
	font-family: 'Oswald', sans-serif;
	color: #1C1D1C;
	font-size: 52px;
  text-align: center;
}

/* target the maximum width of the device */
.big-div {
	max-width:100%; 
  max-height:100%;
	
	background-image: url(<%= asset_path 'bg1.jpg' %>);
	background-attachment: fixed;		
	background-repeat: no-repeat;
	
	margin: 0em;
	padding: 5rem 0rem;
	z-index: -3;
}

@media screen and (max-width: 1400px){
	.big-div {
		background-image: url(<%= asset_path 'bg1-1400.jpg' %>);
		background-attachment: fixed;		
		background-repeat: no-repeat;
	}
}

@media screen and (max-width: 1024px){
	.big-div {
		background-image: url(<%= asset_path 'bg1-1024.jpg' %>);
		background-attachment: fixed;		
		background-repeat: no-repeat;
	}
}

.coming-soon {
	margin-bottom: 5%;
  font-size: 19px;
  text-align: center;
  color: #1A3E01;
  font-family: "Oswald";
}

a {
  text-decoration: none;
	color: #1C1D1C;
	font-size: 25px;
}

a:hover {
  text-decoration: none;
  color: #09468C;
  font-size: 30px;
}  

.powered-by {
   position: fixed;
   bottom: 0px;
   left: 0px;
   right: 0px;
   height: 50px;
   margin-bottom: 0px;
}

.links{
  margin-left: 1.86em;
}
