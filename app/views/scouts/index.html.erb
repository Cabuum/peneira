<div class="page-header">
  <h2>scouts</h2>
  <div class="text-right">
    <%= link_to raw('<i class="fa fa-plus fa-2x"></i>'), new_scout_path,
     class: 'btn btn-default' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
          <th>user</th>
          <th>actual_club</th>
        <th colspan="3"> Options </th>
      </tr>
    </thead>

    <tbody>
      <% @scouts.each do |scout| %>
      <tr>
          <td><%= scout.user %></td>
          <td><%= scout.actual_club %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye fa-2x"></i>'), scout, class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-pencil fa-2x"></i>'), edit_scout_path(scout), class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-trash fa-2x"></i>'),
              scout, method: :delete, data: { confirm: 'VocÃª tem certeza?' },
              class: 'btn btn-danger center-block white btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @scouts %>
  </div>  
</div>
