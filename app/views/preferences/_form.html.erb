<%= simple_form_for(@preference, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group col-md-12">  
    <%= f.input :share_email %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.input :share_phone %>
  </div>

  <div class="form-group col-md-12">
    <%= f.button :submit, class: 'btn btn-success btn-block' %>
  </div>
<% end %>
