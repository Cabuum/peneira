<div class="page-header">
  <h2>athletes</h2>
  <div class="text-right">
    <%= link_to raw('<i class="fa fa-plus fa-2x"></i>'), new_athlete_path,
     class: 'btn btn-default' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
          <th>user</th>
          <th>birthday</th>
          <th>height</th>
          <th>weight</th>
          <th>foot</th>
          <th>position</th>
          <th>allow_to_travel</th>
        <th colspan="3"> Options </th>
      </tr>
    </thead>

    <tbody>
      <% @athletes.each do |athlete| %>
      <tr>
          <td><%= athlete.user %></td>
          <td><%= athlete.birthday %></td>
          <td><%= athlete.height %></td>
          <td><%= athlete.weight %></td>
          <td><%= athlete.foot %></td>
          <td><%= athlete.position %></td>
          <td><%= athlete.allow_to_travel %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye fa-2x"></i>'), athlete, class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-pencil fa-2x"></i>'), edit_athlete_path(athlete), class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-trash fa-2x"></i>'),
              athlete, method: :delete, data: { confirm: 'VocÃª tem certeza?' },
              class: 'btn btn-danger center-block white btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @athletes %>
  </div>  
</div>
