<%= simple_form_for(@athlete, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group col-md-12">  
    <%= f.association :user %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.input :birthday %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.input :height %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.input :weight %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.association :foot %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.association :position %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.input :allow_to_travel %>
  </div>

  <div class="form-group col-md-12">
    <%= f.button :submit, class: 'btn btn-success btn-block' %>
  </div>
<% end %>
