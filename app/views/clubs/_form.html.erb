<%= simple_form_for(@club, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group col-md-12">  
    <%= f.input :name %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.input :founded %>
  </div>
  <div class="form-group col-md-12">  
    <%= f.association :address %>
  </div>

  <div class="form-group col-md-12">
    <%= f.button :submit, class: 'btn btn-success btn-block' %>
  </div>
<% end %>
