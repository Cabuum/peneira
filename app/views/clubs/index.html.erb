<div class="page-header">
  <h2>clubs</h2>
  <div class="text-right">
    <%= link_to raw('<i class="fa fa-plus fa-2x"></i>'), new_club_path,
     class: 'btn btn-default' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
          <th>name</th>
          <th>founded</th>
          <th>address</th>
        <th colspan="3"> Options </th>
      </tr>
    </thead>

    <tbody>
      <% @clubs.each do |club| %>
      <tr>
          <td><%= club.name %></td>
          <td><%= club.founded %></td>
          <td><%= club.address %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye fa-2x"></i>'), club, class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-pencil fa-2x"></i>'), edit_club_path(club), class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-trash fa-2x"></i>'),
              club, method: :delete, data: { confirm: 'VocÃª tem certeza?' },
              class: 'btn btn-danger center-block white btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @clubs %>
  </div>  
</div>
